// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Tabel Users
model User {
  user_id      Int       @id @default(autoincrement())
  email        String    @unique 
  password     String    
  full_name    String    
  phone_number String    @unique 
  created_at   DateTime  @default(now())
  rentals      Rental[]  // Relationship to Rental table
}

// Tabel Vehicle
model Vehicle {
  vehicle_id       Int      @id @default(autoincrement())
  vehicle_name     String   
  vehicle_type     String   
  latitude         Float    
  longitude        Float
  status           String   
  battery_level    Float
  last_maintenance DateTime
  rentals          Rental[] // Relationship to Rental table
}

enum RentalStatus {
  ACTIVE
  COMPLETED
  CANCELED
}

model Rental {
  rental_id     Int          @id @default(autoincrement())
  user_id       Int
  vehicle_id    Int
  start_time    DateTime
  end_time      DateTime
  total_cost    BigInt
  status        RentalStatus @default(ACTIVE)

  // Foreign Keys
  user          User         @relation(fields: [user_id], references: [user_id])
  vehicle       Vehicle      @relation(fields: [vehicle_id], references: [vehicle_id])
}
